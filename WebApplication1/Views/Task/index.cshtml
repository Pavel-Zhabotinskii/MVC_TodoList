@model List<TodoList>

<h2>Список задач</h2>

<p>
    <a asp-action="Create">Создать новую задачу</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Заголовок</th>
            <th>Выполнено</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var task in Model)
        {
            <tr>
                <td>@task.Title</td>
                <td>@(task.IsCompleted ? "Да" : "Нет")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@task.Id">Редактировать</a> |
                    <a asp-action="Delete" asp-route-id="@task.Id">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>
